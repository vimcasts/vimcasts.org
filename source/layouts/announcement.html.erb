<% content_for :swiftype_robot do %>
  <meta name="st:robots" content="follow, noindex">
<% end %>

<% wrap_layout :layout do %>
  <div class="row">
    <div class="small-12 columns">
      <%= partial "next-class" %>
    </div>
  </div>

  <section class="article detail">
    <header>
      <div class="title-row">
        <h2 class="title">
          <%= current_page.title %>
        </h2>
        <time class="pubdate" pubdate="pubdate" datetime="<%= current_page.date.strftime('%Y-%m-%e') %>">
          <%= format_pubdate(current_page) %>
        </time>
      </div>
    </header>

    <div class="content-row">
      <div id="article_body" data-swiftype-index="true">
        <%= yield %>
      </div>
    </div>
  </section>

  <div>
    <p>
    <%= partial "social-sharing-buttons",
      :locals => locals.merge(label: "Know someone who might be interested? Spread the word!") %>
    </p>
  </div>

  <%= partial "footer-main" %>

<% end %>
