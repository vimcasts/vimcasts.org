{
    "episodes": [
        <% blog(:episodes).articles.reverse.each do |e| %>{
            "title": "<%= e.title %>",
            "episode_number": "<%= e.data.number %>",
            "published_at": "<%= e.date.httpdate %>",
            "url": "http://vimcasts.org<%= e.url %>",
            "short_url": "http://vimcasts.org/e/<%= e.data.number %>",
            "poster": "http://vimcasts.org<%= e.data.poster %>",
            "abstract": "<%= js_escape_html(e.summary) %>",
            "ogg": {
                "url": "<%= e.data.ogg.source %>",
                "bytes": "<%= e.data.ogg[:size] %>",
                "seconds": "<%= e.data.duration %>",
                "contentType": "video/ogg"
            },
            "quicktime": {
                "url": "<%= e.data.quicktime.source %>",
                "bytes": "<%= e.data.quicktime[:size] %>",
                "seconds": "<%= e.data.duration %>",
                "contentType": "video/x-m4v"
            }
        },
        <% end %>
    ]
}
